# Ensure old preview urls are redirected to the primary domain
# https://docs.netlify.com/routing/redirects/redirect-options/#domain-level-redirects
[[redirects]]
from = "https://bonita-api-doc.netlify.app/*"
to = "https://api-documentation.bonitasoft.com/:splat"
force = true

########################################################################################################################
# Bonita open-api redirects
########################################################################################################################

# Redirects the intermediate versions that are no longer available to the closed version available on the site.
{{#each versionsToRedirect}}
{{#each this}}
[[redirects]]
from = "/{{this}}/*"
to = "/{{@../key}}/:splat"
{{/each}}

{{/each}}

# latest
[[redirects]]
from = "/{{latest}}/*"
to = "/latest/:splat"
# the latest version changes over time
status = 302

